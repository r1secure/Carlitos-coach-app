# Environment
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql://carlitos:carlitos@localhost:5432/carlitos_db

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=carlitos-videos
MINIO_SECURE=False
MINIO_EXTERNAL_ENDPOINT=localhost:9000

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage Limits
MAX_VIDEO_SIZE_MB=100
USER_STORAGE_QUOTA_GB=1

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth (REQUIRED)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:2000/auth/callback

# LLM Configuration
# Use 'openai' provider for generic LiteLLM/OpenAI-compatible endpoints
LLM_PROVIDER=openai
LLM_MODEL=bedrock-claude-4-5-sonnet
LITELLM_API_BASE=https://litellm2stech-internal-prod.cbp-generalprod.com/
LITELLM_API_KEY=your-litellm-api-key

# Optional: Gemini
#GEMINI_API_KEY=your-gemini-api-key
